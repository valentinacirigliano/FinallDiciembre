@using FinalMVCcore.Web.ViewModels;
@model IEnumerable<PlantaListVm>;
@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" type="text/css" href="~/css/StyleSheet.css">

<div class="container">
    <div class="row w-90">
        <div class="col-6">
            <h2>Lista de Plantas</h2>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="Planta" asp-action="UpSert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;
                Nueva Planta
            </a>
        </div>
    </div>
    <table id="tblPlantas" class="table table-bordered w-90">
        <thead>
            <tr>

                <th>Descripcion</th>
                <th>Tipo de Planta</th>
                <th>Precio</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

</div>



@section Scripts{
    <script src="~/js/planta.js"></script>

}



