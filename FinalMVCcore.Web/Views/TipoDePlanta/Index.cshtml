@using FinalMVCcore.Models;
@model IEnumerable<TipoDePlanta>;
@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" type="text/css" href="~/css/tipos.css">

<div class="container">
    <div class="row w-90">
        <div class="col-6">
            <h2>Lista de Tipos de Plantas</h2>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="TipoDePlanta" asp-action="UpSert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;
                Nuevo Tipo de Planta
            </a>
        </div>
    </div>
    <table id="tblTipos" class="table table-bordered w-90">
        <thead>
            <tr>

                <th>Descripcion</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

</div>



@section Scripts{
    <script src="~/js/tipo.js"></script>

}



